{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "installCommand": "pnpm install --frozen-lockfile",
  "buildCommand": "pnpm -C ../../packages/shared build && pnpm build",
  "crons": [
    {
      "path": "/api/cron/schedule-daily",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/settle-markets",
      "schedule": "*/5 * * * *"
    }
  ]
}
